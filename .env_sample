# Web Scraper Settings
SCRAPER_FOLDER_NAME=scrape
# Time to wait between requests in seconds
SCRAPER_WAIT_TIME=1
# Number of retry attempts for failed requests
SCRAPER_RETRIES=3
# Request timeout in milliseconds
SCRAPER_TIMEOUT=20000
# Custom headers for requests (JSON format)
# You can override specific headers while keeping defaults for others
SCRAPER_HEADERS={"User-Agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36", "Accept-Language": "en-US,en;q=0.5"}
# CSS selectors for main content (comma-separated)
# Default selectors will be used if not specified
SCRAPER_CONTENT_SELECTORS=article.main-content,main#main-content,div.article-body
# Elements to remove from content (comma-separated)
# Default elements will be used if not specified
SCRAPER_ELEMENTS_TO_REMOVE=header,footer,nav,script,style,iframe

# Web Search Settings (existing settings)
SEARCH_FOLDER_NAME=search
SEARCH_ENGINE=duckduckgo
SEARCH_LIMIT=10
SEARCH_TIMEOUT=30
SEARCH_RETRIES=3